<h1 class="title">My Lists</h1>

<% @lists.each do |list| %>
  <h2><%= list.name %></h2>
  <li class="list-group-item">
  <%= list.name%>
  <%= link_to "Delete",
    list_path(list),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</li>

<% end %>
<h2>New List</h2>
<%= simple_form_for @list do |f| %>
  <%= f.input :name %>
  <%= f.submit "Submit list", class: "btn btn-primary" %>
<% end %>
